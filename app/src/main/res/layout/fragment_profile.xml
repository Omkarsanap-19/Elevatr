<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".frags.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_light_gray"
        tools:ignore="ExtraText">

        Top App Bar
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/background_white"
            android:elevation="4dp"
            app:title="Profile"
            app:titleTextColor="@color/text_primary"
             />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                Profile Header
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Card.Primary"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        Profile Picture
                        <ImageView
                            android:id="@+id/profile_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/circle_background"
                            android:elevation="8dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/person03"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/textUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Doe"
                            style="@style/TextAppearance.Title"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/textUserEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="john.doe@email.com"
                            style="@style/TextAppearance.Subtitle"
                            android:layout_marginBottom="16dp" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                Basic Information
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Card.Primary"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Basic Information"
                            style="@style/TextAppearance.Title"
                            android:layout_marginBottom="16dp" />

                        Full Name
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_person"
                                android:layout_marginEnd="12dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="Name" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Full Name"
                                    style="@style/TextAppearance.Caption"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/textFullName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="John Doe"
                                    style="@style/TextAppearance.Body" />

                            </LinearLayout>

                        </LinearLayout>

                        Email
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_email"
                                android:layout_marginEnd="12dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="Email" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Email Address"
                                    style="@style/TextAppearance.Caption"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/textEmail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="john.doe@email.com"
                                    style="@style/TextAppearance.Body" />

                            </LinearLayout>

                        </LinearLayout>

                        Phone
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/location"
                                android:layout_marginEnd="12dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="Location"
                                app:tint="@color/primary" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Location"
                                    style="@style/TextAppearance.Caption"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/textLoc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    style="@style/TextAppearance.Body" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>



                App Settings
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Card.Primary"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="App Settings"
                            style="@style/TextAppearance.Title"
                            android:layout_marginBottom="16dp" />

                        Dark Mode Toggle
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp"
                            android:layout_marginBottom="8dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_dark_mode"
                                android:layout_marginEnd="12dp"
                                android:layout_gravity="center_vertical"
                                android:contentDescription="Dark Mode" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Dark Mode"
                                style="@style/TextAppearance.Body"
                                android:layout_gravity="center_vertical" />

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchDarkMode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical" />

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                Sign Out Button
                <Button
                    android:id="@+id/buttonSignOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Out"
                    style="@style/Button.Secondary"
                    android:textColor="@color/error"
                    android:drawableStart="@drawable/ic_logout"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/error" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</FrameLayout>